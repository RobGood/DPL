            (map-list (fn (_) (substr $_ 0 -5))
              (grep (fn (_) (&& (defined? $$_) (eq /path (substr $_ -5))))
                $new-vars))))
      
        (= diff-2 (list-diff $new-vars $new-fns))
      
        $[ d-name new-fns ]
