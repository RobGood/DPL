        # $o->eval("(var-clear $tokenVar)", { });
          $o->{varMapNS}->{$tokenVar} = [];

        my $dir = '/tmp';
        $dir = '/dev/shm' if -d '/dev/shm' && -w _;

        my $lockFile = sprintf '%s/.dpl-lock-sym-%s', $dir, $name;
        my $releaseTime = time;
        unlink $lockFile;

        my $heldTime = $releaseTime - $acquireTime;
        $o->{lockHoldTimes}->{$name} += $heldTime;

        return;
    },

