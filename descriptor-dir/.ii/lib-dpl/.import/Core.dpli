sub
_var_set_simple {
    my ($o, $args) = @_;

    # _report([' >> _var_set_simple(%s)', $args->[0]]);

    $o->throw("Expected a var name to be defined here.")
        unless defined $args->[0];

    my $capture = $o->{_var_capture_info};
    $capture = $o->{varMapNS}
        unless defined $capture;

    my $stack = $capture->{$args->[0]};
    if(!defined $stack) {
        $stack = [ ];
        $capture->{$args->[0]} = $stack;
    }
    $stack->[0] = $args->[1];

    return $args->[1];
}

