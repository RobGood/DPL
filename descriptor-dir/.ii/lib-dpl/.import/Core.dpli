    'sym-from-string/usage' => "(sym-from-string -str-) : Convert -str- into a symbol",
    'sym-from-string' => sub {
        my ($o, $args) = @_;
         #print STDERR " >> sym-from-string($o, $args)\n";

        my $str = shift @$args;
