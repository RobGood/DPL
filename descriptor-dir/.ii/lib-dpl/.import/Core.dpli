        my $path = "$dir/$name";

        my $fh = new FileHandle("> $path.$$");
        return unless defined $fh;


        if(defined $bf) {
            my $prev = -s $path;

            $value = $bf * $prev + (1-$bf) * $value;
        }

        $value = int($value + 0.5);
        
        if($value > 0) {
            seek $fh, $value-1, 0;
            print $fh "\0";
        }
        close $fh;

        rename "$path.$$", $path;

        return;
