    'pp-set' => sub {
        my ($o, $args) = @_;

        my ($name, $value, $bf) = @$args;

        # $o->throw(" !! Invalid parameter name '$name'") unless $name =~ /^[-.\w]+$/;
        $o->_assertIsValidTypeName('parameter name', $name);

