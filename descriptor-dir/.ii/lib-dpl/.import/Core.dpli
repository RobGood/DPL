            # map { _report([" @#  '%s' -> '%s'", $_, $expr->{$_}]) } keys %$expr;
            $o->throw("Don't know how to eval a Map.");
        }

        unshift @{$varMap->{':'}}, $path;

        # _report(['name: %s, hash-eval stack: %s', $args->[2], join(':', @{$varMap->{':'}})]);

        my $value = eval { $o->evalAll($expr, { }) };
